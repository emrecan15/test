        // film öner modal
        $(document).ready(function() {
            $("#modalContainer").load("film-oneri-modal.html", function(response, status, xhr) {
                if (status === "success") {
                    console.log("Modal başarıyla yüklendi.");
                    window.filmOneriSistemi = new FilmOneriSistemi(); // Modal yüklendikten sonra başlat
                } else {
                    console.error("Modal yüklenemedi:", status, xhr.status, xhr.statusText);
                }
            });
        });

    </script>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
        const navbar = document.getElementById("navbar");
        const targetSection = document.getElementById("latest-movies");

        if (!navbar || !targetSection) {
        console.warn("Navbar veya hedef section bulunamadı.");
        return;
        }

        window.addEventListener("scroll", () => {
        const sectionTop = targetSection.offsetTop;
        const scrollY = window.scrollY;

        if (scrollY >= sectionTop - 50) {
            navbar.classList.add("navbar-colored");
        } else {
            navbar.classList.remove("navbar-colored");
        }
        });
    });

    </script>


